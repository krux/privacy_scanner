@import "reset"
@import "variables"
@import "base"
@import "layout"
@import "tabs"

.logo
  margin-bottom: 15px

  a
    color: $text_color
    text-decoration: none
    font-weight: bold
    font-size: 24px
    line-height: 26px

    span
      color: $secondary_text
      font-weight: normal
      display: block
      font-size: 20px

form.url
  border-radius: 3px
  background: $pale_background
  border: $border
  padding: 10px
  overflow: hidden
  margin-bottom: 20px

  input
    float: left
    width: 850px
    height: 30px
    line-height: 30px
    font-size: 20px
    font-family: inherit

  .button
    margin-left: 8px
